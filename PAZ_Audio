#ifndef PAZ_AUDIO
#define PAZ_AUDIO

#include <iostream>
#include <vector>
#include <array>
#include <memory>

namespace paz
{
    class AudioTrack
    {
        friend class AudioEngine;

        std::shared_ptr<std::vector<float>> _samples;

    public:
        AudioTrack();
        AudioTrack(const std::vector<float>& samples);
    };

    class AudioEngine
    {
    public:
        AudioEngine() = delete;
        static void Play(const AudioTrack& track, bool loop = false);
    };
}

#endif
